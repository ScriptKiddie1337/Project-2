<div class="wrapper">
  {{!-- Header --}}
  <div class="header">
    <h1 class="title tutor-h1-margin">Post A Lesson</h1>
  </div>

{{!-- Body --}}
  <div class="row">
    {{!-- Left Sidebar --}}
    <div class="col s2 white">
      {{!-- Placeholder Tag Buttons --}}
      <div class="row center sidebar-margin">
        <a class="waves-effect waves-light red btn">Potential Buttons</a>
      </div>
      {{!-- Handlebars Tag Buttons --}}
      <ul id="tag-list" class="list-group">
        {{#each tag}}
        <li data-id="{{this.tagid}}">
          <button class="bt">{{this.tagName}}</button>
        </li>
        {{/each}}
      </ul>
    </div>
      {{!-- Tutor Listing Card --}}
      <div class="col s8 white tutor-card-margin">
              <div class="col s10 offset-s1">
        <div class="card-panel" id="tutorForm">
          <div class="row">
            <form class="col s12">
              <div class="row form-margin">
                {{!-- Upload Picture --}}
                <div class="col s4">
                  <img id="defaultPic" src="https://place-hold.it/150x150">
                </div>
                {{!-- Fill Out Form --}}
                <div class="col s8">
                     <div class="row">
                        <div class="input-field col s6">
                          <input id="tutor_first_name" type="text" class="validate">
                          <label for="tutor_first_name">First Name</label>
                        </div>
                        <div class="input-field col s6">
                          <input id="tutor_last_name" type="text" class="validate">
                          <label for="tutor_last_name">Last Name</label>
                        </div>
                     <div class="row">
                        <div class="input-field col s12">
                          <input id="tutor-email" type="email" class="validate">
                          <label for="tutor-email">Email Address</label>
                        </div>
                      </div>
                    </div>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s3">
                  <textarea id="tutor-url" class="materialize-textarea"></textarea>
                  <label for="tutor-url">Upload Profile URL</label>
                </div>
                <div class="input-field col offset-s1 s8">
                  <textarea id="venmo" class="materialize-textarea"></textarea>
                  <label for="venmo">@Venmo Name</label>
                </div>
              </div>
              <div class="row">
                 <div class="input-field col s12">
                  <textarea id="job-description" class="materialize-textarea"></textarea>
                  <label for="job-description">Job Description</label>
                </div>
              </div>
              <div class="row center">
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{!-- Right Sidebar --}}
    <div class="col s2 white center">
      <img class="ad-margin"src="https://place-hold.it/150x500">
    </div>
  </div>
</div>
{{!-- Footer --}}
<footer class="page-footer">
    <div class="row footer-fix">
      <p class="col offset-s5 s2 copyright">&copy; Copyright 2018 
      </p>
      <div class="col offset-s1 s4 center button-fix">
      Student? Hire Tutors Here! &nbsp 
      <a href="/tutors" class="waves-effect waves-light light-blue btn">View Tutor Listings</a>
      </div>
    </div>  
</footer>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
