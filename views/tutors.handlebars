<div class="wrapper">
  {{!-- Header --}}
  <div class="header">
    <h1 class="title tutor-h1-margin">Post A Lesson</h1>
  </div>

{{!-- Body --}}
  <div class="row">
    {{!-- Left Sidebar --}}
    <div class="col s2 white">
      {{!-- Placeholder Tag Buttons --}}
      <div class="row center sidebar-margin">
        <a class="waves-effect waves-light red btn">Potential Buttons</a>
      </div>
      {{!-- Handlebars Tag Buttons --}}
      <ul id="tag-list" class="list-group">
        {{#each tag}}
        <li data-id="{{this.tagid}}">
          <button class="bt">{{this.tagName}}</button>
        </li>
        {{/each}}
      </ul>
    </div>
      {{!-- Tutor Listing Card --}}
      <div class="col s8 white tutor-card-margin">
              <div class="col s10 offset-s1">
        <div class="card-panel" id="tutorForm">
          <div class="row">
            <form class="col s12">
              <div class="row">
                {{!-- Upload Picture --}}
                <div class="col s4">
                  <img id="defaultPic" src="https://place-hold.it/150x150">
                </div>
                {{!-- Fill Out Form --}}
                <div class="col s8">
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{!-- Right Sidebar --}}
    <div class="col s2 white center">
      <img class="ad-margin"src="https://place-hold.it/150x500">
    </div>
  </div>
</div>
{{!-- Footer --}}
<footer class="page-footer">
    <div class="row footer-fix">
      <p class="col offset-s5 s2 copyright">&copy; Copyright 2018 
      </p>
      <div class="col offset-s2 s3 center button-fix">
      Tutor? Sign Up Here! &nbsp 
      <a href="/tutors" class="waves-effect waves-light orange btn">Post Job</a>
      </div>
    </div>  
</footer>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
